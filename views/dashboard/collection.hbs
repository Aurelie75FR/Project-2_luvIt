<body class="body">

  <h1 class="pagetitle">Collections</h1>

  <div class="collection-maincontainer">

    {{#each collection}}
      <div class="collectioncard">

        <div class="suppmodif">
          <a href="collection/update-collection/{{this._id}}" class="link"><img
              class="icon"
              src="images/edit.svg"
              alt=""
            /></a>
          <a href="collection/delete/{{this._id}}" class="link"><img
              class="icon"
              src="images/trash.svg"
              alt=""
            /></a>
        </div>
        
        <div class="purpleborder parent">
          <a href="collection/{{this._id}}">
            <img class="imgdecale" src="{{this.image}}" alt="" /></a>
          <p class="purplefat">{{this.name}}</p>
          <p class="whitetext">{{this.description}}</p>
        </div>

      </div>
    {{/each}}
