<body class="body">
    
<form method="post" action="/dashboard/{{collection._id}}" class="form" enctype="multipart/form-data">

<div class="step left shadow ">   

<div class="canceldiv">
  <a href="/dashboard"> <img src="/images/close.svg" alt="close"> </a>
</div>

    <p class="title center">Modify your collection </p>
    
    <label for="name" class="label closer">Name</label>
    <input class="input smallerinput" type="text" id="name" name="name" value="{{collection.name}}">

    <label for="image" class="label closer">
        Choose a picture
    </label>
    <input class="input smallerinput spe" type="file" id="image" name="image" accept="image/png, image/jpeg">

    <label for="description" class="label closer">Description</label>
    <textarea maxlength="50" type="text" class="input smallerradius field smallerinput" id="description" name="description">{{collection.description}}</textarea>

    <input type="submit" value="Done" class="done button center">
    </div> 
</form>



</body>