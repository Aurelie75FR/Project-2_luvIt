<body class="body">

<div class="purpleborder size">
  <h1 class="pagetitle">Cards</h1>

  <p class="sticky">{{collection.name}}</p>
  <a class="whitetext" href="javascript:history.back()"> </a>

  <a href="/dashboard/add-card">Add a new card</a>



  {{#each collection.cards}}
    <div>
      <h2>Name : {{this.name}}</h2>
      <p>Description : {{this.description}}</p>
      <h3>My links :</h3>
      {{! add a each ?? }}
      <a href="{{this.links}}">{{this.links}}</a>

    </div>
    <a href="/collection/update-card/{{this._id}}">Update card</a>
    <a href="/collection/delete/{{this._id}}">Delete card</a>
  {{/each}}



  </div>

</body>